    "audit:perf": "node performance-audit.js",
    "audit:acc": "node -e \"import('./test-accessibility-simple.js')\"",
    "audit:sec": "npm audit",
    "test": "echo \"Tests à implémenter - voir TODO.md\"",
    "predeploy": "npm run build",
    "clean": "rm -rf dist node_modules/.vite",
